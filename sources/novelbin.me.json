{
    "name": "NovelBin",
    "id": "novelbin.me",
    "baseUrl": "https://novelbin.me",
    "enabled": true,
    "version": "1.0.0",
    "contentType": "novel",
    "http": {
        "timeout": 30000,
        "retryAttempts": 3,
        "retryDelay": 2000,
        "rateLimit": 1000,
        "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36",
        "usePuppeteer": true,
        "jsWaitTime": 3000
    },
    "search": {
        "url": "{baseUrl}/search?keyword={query}",
        "resultSelector": "div#list-page div.archive div.list > div:not(.header-list)",
        "fields": {
            "title": {
                "selector": "h3.novel-title a",
                "attribute": "text"
            },
            "url": {
                "selector": "h3.novel-title a",
                "attribute": "href"
            },
            "cover": {
                "selector": "img.cover",
                "attribute": "src"
            },
            "latestChapter": {
                "selector": "div.text-info a",
                "attribute": "href"
            }
        }
    },
    "novelDetails": {
        "fields": {
            "title": {
                "selector": "div.desc h3.title",
                "attribute": "text"
            },
            "author": {
                "selector": "ul.info li a[href*='novelbin-author']",
                "attribute": "text"
            },
            "genres": {
                "selector": "ul.info li a[href*='novelbin-genres']",
                "attribute": "text",
                "multiple": true
            },
            "status": {
                "selector": "ul.info li a.text-primary",
                "attribute": "text",
                "transform": "status"
            },
            "description": {
                "selector": "div#tab-description div.desc-text",
                "attribute": "text"
            },
            "cover": {
                "selector": "div.books img",
                "attribute": "src"
            },
            "latestChapter": {
                "selector": "div.l-chapter a.chapter-title",
                "attribute": "text"
            },
            "latestChapterUrl": {
                "selector": "div.l-chapter a.chapter-title",
                "attribute": "href"
            }
        }
    },
    "chapterList": {
        "mode": "sequential",
        "firstChapterSelector": "div#list-chapter ul.list-chapter li:first-child a, a.btn-read-now",
        "fields": {
            "title": {
                "selector": "span.chapter-text",
                "attribute": "text",
                "fallback": "text"
            },
            "url": {
                "attribute": "href"
            }
        },
        "chapterNumberPattern": "[Cc]hapter[\\s:-]*(\\d+)",
        "chapterNumberUrlPattern": "chapter-(\\d+)"
    },
    "chapterContent": {
        "titleSelectors": [
            "h2 a.chr-title span.chr-text",
            "h2 span.chr-text",
            "div#chr-content h4",
            "h2"
        ],
        "contentSelector": "div#chr-content",
        "removeSelectors": [
            "div[id^='pf-']",
            "script",
            "style",
            ".ads",
            ".advertisement",
            ".fc-consent-root",
            "h4"
        ],
        "paragraphSelector": "p",
        "navigation": {
            "nextSelector": "a#next_chap",
            "prevSelector": "a#prev_chap",
            "nextText": "Next",
            "prevText": "Prev"
        }
    }
}